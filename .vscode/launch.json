{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Current Test (Jest)",
      "request": "launch",
      "runtimeArgs": [
        "run-script",
        "test",
        "--",
        "--runInBand",
        "--no-cache",
        "--testPathPattern",
        "${fileBasenameNoExtension}"
      ],
      "runtimeExecutable": "npm",
      "skipFiles": ["<node_internals>/**"],
      "type": "node"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Current File (TSX)",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/node_modules/.bin/tsx",
      "args": ["${file}"],
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Rule2Rego (TSX)",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/node_modules/.bin/tsx",
      "args": ["rule2rego.ts", "pattern.json"],
      "cwd": "${workspaceFolder}"
    }
  ]
}
